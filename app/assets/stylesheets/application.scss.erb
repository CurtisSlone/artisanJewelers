@import "normalize";
@import "grid";
@import "cover";
@import url(https://fonts.googleapis.com/css?family=Roboto+Slab:700);

$headerheight: 100px;

/* Page Styles
================================ */

* {
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
body {
	font: normal 1em/1.5 sans-serif;
	color: #222;
	background-color: #edeff0;
}
img {
	padding: 5px;
    width: 100%;
}

/* Main Layout Styles
================================ */

.main-header {
	padding-top: 10px;
	padding-bottom: 10px;
	background-color: #000000; 
    height: $headerheight;
}

.logo {
    max-height: $headerheight;
    width: 250px;
}



@media (min-width: 768px) { 

	/* Main Layout Styles
	================================ */

	body {
		padding-top: 75px;
	}
	.main-header {
		position: absolute;
		top: 0;
		width: 100%;
        margin-bottom: 1%;
	}
	

}

