@import "normalize";
@import "grid";
@import "cover";
@import url(https://fonts.googleapis.com/css?family=Roboto+Slab:700);

* {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

body {
    font: normal 1.1em/1.5 sans-serif;
    background-color: #ffe8e8;
    color: #222;
}

.main-header {
    background-color: #000;
    padding: 10px;

    .main-header:after {
    content: "";
    display: table;
    clear:both;
    }

    .logo {
        width: 180px;
        margin: 0;
    }

    .nav-btn {
        width:40px;
        float: right;
    }

    li {
        margin-top: 5px;
    }
    
    a {
        text-decoration: none;
        color: #fff;
        &:hover {
        color: #ccc;
        }
    }
    
}
.user {
    background: #444;
    height: 35px;
    padding: 3px;
    
    li {
        margin-left: 15px;
        display: inline-block;

    }
     a {
        text-decoration: none;
        color: #fff;
        &:hover {
        color: #ccc;
        }
     }
}



@media (min-width: 768px) { 
    
    .logo, 
    .nav {
        display: inline-block;
    }

    .nav,
.user {
float: right;
        li {
        display: inline-block;
            margin-left: 10px;
            &:last-child {
            margin-right: 30px;
            }
        }
    }

    .user {
    width: 100%;
    }

    .nav-btn {
    display: none;
    }
    
}

