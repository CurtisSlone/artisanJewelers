.store {
  
background: linear-gradient(rgba(0,0,0,.7), rgba(0,0,0,.7)),
    url(<%= asset_path 'store.jpg' %>) no-repeat center top;
background-size: cover;
height: 1000px;
text-align: center;
color: white;
padding-top: 1%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    h1 {
    font: normal 3em/1.1 'Roboto Slab';
    }
    
    p {
     font-weight: bold;
    }
    
    .fb-page {
        background: #fff;
border: 2px solid black;

    }
    @media (min-width: 767px) {
        
    h1 {
    font-size: 5em;
    }
    h2 {
    font-size: 2em;
    }
    p {
   
        font-size: 1.5em;
    }
        
        
        
    }
}